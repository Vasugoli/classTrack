# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/classtrack_db"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Server Configuration
PORT=4000
NODE_ENV=development

# Campus Geo-Location Configuration
# Example coordinates for New Delhi, India (adjust for your campus)
CAMPUS_LAT=28.6139
CAMPUS_LON=77.2090
CAMPUS_RADIUS=500

# Geo-Lock Configuration (optional)
# Set to "true" to disable geo-locking in development
DISABLE_GEO_LOCK=false

# Security Configuration
# Rate limiting (requests per minute)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=15

# Session Configuration
# Default token expiry in seconds
DEFAULT_TOKEN_EXPIRY=60

# Audit Log Configuration
# Cleanup old logs after X days
AUDIT_LOG_RETENTION_DAYS=90

# Email Configuration (optional - for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@domain.com
# SMTP_PASS=your-app-password

# Redis Configuration (optional - for caching)
# REDIS_URL=redis://localhost:6379

# File Upload Configuration (optional)
# MAX_FILE_SIZE=5242880
# UPLOAD_PATH=./uploads

# Cors Configuration
CORS_ORIGIN=http://localhost:3000

# Prisma Configuration
# PRISMA_CLI_QUERY_ENGINE_TYPE=binary